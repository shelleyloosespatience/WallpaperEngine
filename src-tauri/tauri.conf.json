{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ColorWall",
  "version": "3.0.1",
  "identifier": "com.laxenta.colorwall",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "ColorWall - Wallpaper Engine @2025 Laxenta Inc",
        "width": 1000,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "maximized": false,
        "decorations": false,
        "transparent": true
      },
      {
        "label": "wallpaper",
        "title": "ColorWall - Wallpaper Engine @2025 Laxenta Inc",
        "width": 1000,
        "height": 900,
        "resizable": false,
        "fullscreen": false,
        "maximized": false,
        "decorations": false,
        "transparent": false,
        "skipTaskbar": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/ColorWall/*",
          "$TEMP/user_wallpapers/*",
          "$RESOURCE/**"
        ]
      },
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "publisher": "Laxenta Inc",
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png",
      "assets/**/*"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico"
      }
    }
  }
}