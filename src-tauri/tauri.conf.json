{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ColorWall",
  "version": "1.2.0",  
  "identifier": "com.laxenta.colorwall", 
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "ColorWall - Wallpaper Engine @2025 Laxenta Inc", 
        "width": 1000, 
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "maximized": false,
        "decorations": false,
        "transparent": true,
        "skipTaskbar": false
      },
      {
        "label": "wallpaper",
        "title": "ColorWall - Wallpaper Engine @2025 Laxenta Inc",
        "width": 1000,
        "height": 900,
        "resizable": false,
        "fullscreen": true,
        "maximized": false,
        "decorations": false,
        "transparent": false,
        "skipTaskbar": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"] 
    }
  },
"bundle": {
  "active": true,
  "publisher": "Laxenta Inc",
  "targets": "all",
  "icon": [
    "icons/32x32.png",
    "icons/128x128.png",
    "icons/128x128@2x.png",
    "icons/icon.icns",
    "icons/icon.ico",
    "icons/icon.png"
  ],
  "windows": {
    "nsis": {
      "installerIcon": "icons/icon.ico"
    }
  }
}
}