{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ColorWall",
  "version": "1.2.0",  
  "identifier": "com.laxenta.colorwall", 
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ColorWall - Wallpaper Engine", 
        "width": 1400, 
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "maximized": true,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: http://asset.localhost; style-src 'self' 'unsafe-inline'",
      "capabilities": ["default"] 
    }
  },
"bundle": {
  "active": true,
  "publisher": "Laxenta Inc",
  "targets": "all",
  "icon": [
    "icons/32x32.png",
    "icons/128x128.png",
    "icons/128x128@2x.png",
    "icons/icon.icns",
    "icons/icon.ico",
    "icons/icon.png"
  ],
  "windows": {
    "nsis": {
      "installerIcon": "icons/icon.ico"
    }
  }
}
}
